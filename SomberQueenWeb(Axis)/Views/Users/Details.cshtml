@model SomberQueenWeb_Axis_.Models.User

@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<h1>Kullanıcı Detayları</h1>

<div>
    <h4>Kullanıcı</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kullanıcı Adı
        </dt>
        <dd class="col-sm-10">
            @Model.username
        </dd>
        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class="col-sm-10">
            @Model.role
        </dd>
        <dt class="col-sm-2">
            Oluşturulma Tarihi
        </dt>
        <dd class="col-sm-10">
            @Model.created_at.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Şifreleme Anahtarı
        </dt>
        <dd class="col-sm-10">
            @(Model.decryption_key != null ? BitConverter.ToString(Model.decryption_key).Replace("-", "") : "Anahtar bulunamadı")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.user_id">Düzenle</a> |
    <a asp-action="Index">Listeye Geri Dön</a>
</div>
