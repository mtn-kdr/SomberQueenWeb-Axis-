@model User

<h3>Bu kullanıcıyı silmek istediğinize emin misiniz?</h3>

<div>
    <h4>Kullanıcı Detayları</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kullanıcı Adı
        </dt>
        <dd class="col-sm-10">
            @Model.username
        </dd>
        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class="col-sm-10">
            @Model.role
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="user_id" />
        @Html.AntiForgeryToken()
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
